{
  "name": "create-spicetify-app",
  "version": "1.2.0",
  "description": "Generates a project with Spicetify Creator.",
  "bin": "./dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "engineStrict": true,
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --platform=node --format=esm --target=es2022 --external:../../node_modules/* --outdir=./dist --minify",
    "dev": "npm run build --watch",
    "prepack": "npm run build"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "execa": "^8.0.1",
    "inquirer": "^9.2.12"
  },
  "files": [
    "dist/**/*",
    "template/**/*"
  ],
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "esbuild": "^0.19.11"
  }
}
